<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>
 <%= link_to categories_path(format: "csv") ,class:'btn pull-right'  do %><span class="glyphicon glyphicon-save">csv</span><span class="filetypes-csv"></span><%end%>
 <%= link_to categories_path(format: "xls"),class:'btn pull-right'  do %><span class="glyphicon glyphicon-save">xls</span><span class="filetypes-csv"></span><%end%>
 <%= link_to categories_path(format: "pdf"),class:'btn pull-right'  do %><span class="glyphicon glyphicon-save">pdf</span><span class="filetypes-csv"></span><%end%>
<table class="table table-stripped table-condensed">
  <thead>
    <tr>
      <th>Cname</th>
      <th>Crating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.cname %></td>
        <td><%= category.crating %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path , class:'btn btn-info btn-block' %>
