 <!DOCTYPE html> 
<html>
<head>
  <title>Deviseapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
</head>
<body>
<header class="container-fluid" style="background-color:#d3d3d3;postion:fixed">
  <h1 class="text-center">Welcome TO <strong>NYROS TECHNOLOGIES</strong></h1>
</header>
<div class="navbar-header  col-lg-offset-1 ac">
      <a class="navbar-toggle btn " data-toggle="collapse" 
         data-target="#example-navbar-collapse"><span class="glyphicon glyphicon-align-justify"></span></a>
         <span class="sr-only">Toggle navigation</span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
         <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><%=image_tag("icon.png" ,:alt => "home image" ,:width => 100,:style=>"margin-top:-10px;") %></a>
</div>
   <div class="collapse navbar-collapse ac"  id="example-navbar-collapse">
   <ul class="nav navbar-nav ">
       
        <%if user_signed_in?%>
        <li> <%= link_to 'Areas',areas_path , class:'btn'%></li>
        <li> <%= link_to 'Categories',categories_path , class:'btn'%></li>
        <li> <%= link_to 'lists',lists_path , class:'btn'%></li>
        <%end%>
   </ul>     
    <ul class="nav navbar-nav pull-right ">
        <% if user_signed_in? %>
      
        <li style='margin-top:17px'>Logged in as <strong><%= current_user.email %></strong>.</li>
        <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn ' %></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn'  %></li>
        <%if current_user.admin?%>
          <li><%= link_to "Dashboard", rails_admin.dashboard_path%></li>
        <%end%>
        <%if current_user.superadmin?%>
          <li><%= link_to "Dashboard", rails_admin.dashboard_path%></li>
        <%end%>
        <% else %>
        <li><%= link_to "Sign up", new_user_registration_path, :class => 'btn '  %></li>
        <li><%= link_to "Login", new_user_session_path, :class => 'btn '  %></li>
        
        <% end %>
    </ul>
    </div>


<% if notice %>
  <p class="alert alert-success text-center"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger text-center"><%= alert %></p>
<% end %>

<div class="container">
<br>
<br>
  <%= yield %>
</div>

</body>
</html>
